<Window x:Class="arae.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="HorizontalTags">
            <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid>
        <GridSplitter Height="276" HorizontalAlignment="Left" Margin="0,35,0,0" Name="gridSplitter1" VerticalAlignment="Top" Width="503" />
        <DockPanel Height="276" HorizontalAlignment="Left" Margin="0,35,0,0" Name="dockPanel1" VerticalAlignment="Top" Width="503">
            <ListBox ItemsSource="{Binding Tags}" Name="listBoxTags" Width="128">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Name}">
                            <ListBox ItemsSource="{Binding Tags}" Name="listBoxTags" Width="128" >
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" />
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <DockPanel Name="dockPanelFileView" VerticalAlignment="Stretch">
                <Button DockPanel.Dock="Top" Height="50">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Source="Folder.jpg" />
                            <TextBlock Text="I don't really like this button set-up here.  But I guess it will work for now" Margin="2" TextWrapping="Wrap" MaxWidth="200" />
                        </StackPanel>
                </Button>
                <ListBox ItemsSource="{Binding Files}" Name="listBoxFiles">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </DockPanel>
        <ListBox Height="37" ItemsSource="{Binding ActiveTags}" HorizontalAlignment="Left" Name="listBoxActiveTags" ItemsPanel="{StaticResource HorizontalTags}" VerticalAlignment="Top" Width="503">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
